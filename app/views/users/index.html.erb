<h3>予定一覧</h3>
<% if flash[:notice] %>
<p class="notice"><%= flash[:notice] %></p>
<% end %>

<table>
  <thead>
    <tr>
      <th>id</th>
      <th>タイトル</th>
      <th>開始日</th>
      <th>終了日</th>
      <th>終日</th>
      <th>更新日時</th>
      <th>作成日時</th>
      <th>参照</th>
      <th>編集</th>
      <th>削除</th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.id %></td>
        <td><%= user.title %></td>
        <td><%= user.start.strftime("%Y年%m月%d日") %></td>
        <td><%= user.finish.strftime("%Y年%m月%d日") %></td>
        <td>
        <% if user.allday == true %>
        <%= "○" %>
        <% else user.allday == false %>

        <% end %>
       
       
        <td><%= user.updated_at.to_s(:datetime_jp) %></td>
        <td><%= user.created_at.to_s(:datetime_jp) %></td>
        <td>
         <%= link_to "参照", user %>
       </td>
       <td>
       <%= link_to "編集", [:edit, user] %>
       <td>
       <%= link_to "削除", user, method: :delete, data: { confirm: "本当に削除しますか？" } %>
      </td>
       </td>
    </tr>
       
    <% end %>
  </tbody>
</table>

<p><%= link_to "ユーザー新規登録", :new_user %></p>
<h6 class="count">スケジュール合計:<%= @users.count %></h6>

<a><%= "本日の日付：#{Date.today.strftime("%Y/%m/%d")}" %></a>


