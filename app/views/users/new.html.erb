<h3>ユーザー新規作成</h3>
<% if flash[:alert] %>
<p class="aler"><%= flash[:alert] %></p>
<% end %>

<%= render "shared/error", obj: @user %> <!--ここを追加する-->
<%= form_with model: @user do |f| %>
    <table>
      <tr>
        <th><%= f.label :title ,"タイトル" %></th>
        <td><%= f.text_field :title %></td>
      </tr>
  
      <tr>
        <th><%= f.label :start ,"開始日" %></th>
        <td><%= f.date_select :start %></td>
      </tr>
  
      <tr>
      <th><%= f.label :finish ,"終了日" %></th>
      <td><%= f.date_select :finish %></td>
      </tr> 
      
      <tr>
        <th><%= f.label :introduction ,"メモ" %></th>
        <td><%= f.text_area :introduction %></td>
      </tr>
      
      <tr>
      <th><%= f.label :allday ,"終日" %></th>
      <td><%= f.check_box :allday, checked:true %></td>
      <td> 終日の場合はチェックを入れます</td>
      </tr>
        
    </table>
  
    <div>
      <ul>
        <li><%= f.submit "登録完了する"%></li>
        <li><%= link_to "ユーザー情報一覧に戻る", :users %></li>
      </ul>
    </div>
    
  <% end %>

