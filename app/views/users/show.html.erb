<h3>ユーザー詳細</h3>

<table>
  <tr>

    <th>タイトル</th>
    <td><%= @user.title %></td>
  </tr>

    <tr>
    <th>開始日</th>
    <td><%= @user.start %></td>

  </tr>

  <tr>
    <th>終了日</th>
    <td><%= @user.finish %></td>
  </tr>
  <tr>
      <th>終日</th>
      <td>
      <% if @user.allday %>
        <strong>○</strong>
      <% end %>
      </td>
  </tr>

  <tr>
    <th>メモ</th>
    <td><%= @user.introduction %></td>
  </tr>
</table>

 

<div>
  <ul>
    <li><%= link_to "ユーザー情報一覧に戻る", :users %></li>
  </ul>
</div>